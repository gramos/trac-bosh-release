set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Available variables
# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package
export HOME=/var/vcap

export HOME=/var/vcap 
export PYTHONPATH=/var/vcap/packages/python:/var/vcap/packages/trac/trac
export PYTHONUSERBASE=$BOSH_INSTALL_TARGET/trac



tar xfv python/Python-2.7.6.tgz
tar xzf python/setuptools-1.3.1.tar.gz 

cd Python-2.7.5
./Python-2.7.6/configure --prefix=${BOSH_INSTALL_TARGET}
make
make install

export PYTHON_BIN=/var/vcap/packages/python/bin/python 

$PYTHON_BIN setuptools-1.3.1/setup.py install --user

