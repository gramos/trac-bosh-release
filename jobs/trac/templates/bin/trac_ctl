#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/trac/helpers/ctl_setup.sh 'trac'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

export PYTHONUSERBASE=/var/vcap/packages/trac/trac

case $1 in

  start)
    exec /var/vcap/packages/trac/trac/bin/tracd --daemonize --port=80 /var/vcap/packages/mytracproject --pidfile=$PIDFILE\
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: trac_ctl {start|stop}"

    ;;

esac
exit 0
